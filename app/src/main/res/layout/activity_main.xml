<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/bannerText"
        android:layout_width="fill_parent"
        android:layout_height="70dp"

        android:text="Alpha 0.01"

        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/buttonWorkOrders"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Work Orders"

        android:textSize="26dp"
        app:layout_constraintTop_toBottomOf="@id/bannerText" />

    <Button
        android:id="@+id/buttonPunch"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="Punch Lists"
        android:textSize="26dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonWorkOrders"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/buttonRoomLayouts"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="Room Layout Designs"
        android:textSize="26dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonPunch"
        android:layout_marginTop="20dp" />


</android.support.constraint.ConstraintLayout>